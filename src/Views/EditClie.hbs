
<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/src/Views/Clientes.hbs/update/" method="post">
                            <div class="form-grup">
                                <input type="hidden" name="dpi"  value="{{dpi}}"  class="form-control">
                            </div>
                            <div class="form-grup">
                                <input type="text" name="nombre" value="{{nombre}}" class="form-control">
                            </div>
                            <div class="form-grup">
                                <input type="email" name="email" value="{{email}}" class="form-control">
                            </div>
                            <div class="form-grup">
                                <input type="text" name="direccion" value="{{direccion}}" class="form-control">
                            </div>
                            <br>
                            <button type="submit" class="btn btn-success">Editar  Cliente</button>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>