</body>
<div class="container mt-4">
        <div class="row">
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Dpi</th>
                            <th>Nombre</th>
                            <th>Correo electronico</th>
                            <th>Direccion</th>
                            <th>Accion</th>
                        </tr>
                    </thead>
                
                <tbody>
                        {{#if data}}
                            {{#each data }}
                                <tr>
                                    <th>{{dpi}}</th>
                                    <th>{{nombre}}</th>
                                    <th>{{email}}</th>
                                    <th>{{direccion}}</th>
                                    <th>
                                        <a href="/src/Views/Clientes.hbs/delete/{{dpi}}"  class="btn btn-danger"> Eliminar</a>
                                        <a href="/src/Views/Clientes.hbs/update/{{dpi}}"  class="btn btn-info"> Editar</a>
                                    </th>
                                </tr>
                            {{/each}}
                        {{/if}}
                </tbody>
                </table>
            </div>
              <div class="card">
                  <div class="card-body mt-3">
                      <div class="col-md-5">
                        <form action="/src/Views/Clientes.hbs/add" method="post">
                            <div class="form-grup">
                                <input type="number" name="dpi" placeholder="Dpi" class="form-controll">
                            </div>
                            <div class="form-grup">
                                <input type="text" name="nombre" placeholder="Nombre" class="form-controll">
                            </div>
                            <div class="form-grup">
                                <input type="email" name="email" placeholder="Correo electronico" class="form-controll">
                            </div>
                            <div class="form-grup">
                                <input type="text" name="direccion" placeholder="Direccion" class="form-controll">
                            </div>
                            <br>
                            <button type="submit" class="btn btn-success">Ingresar  Cliente</button>
                        </form>
                    </div>
                </div>  
            </div>
        </div>
    </div>